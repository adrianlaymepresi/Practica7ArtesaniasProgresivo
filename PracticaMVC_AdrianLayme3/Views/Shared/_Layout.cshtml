<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PracticaMVC_AdrianLayme3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticaMVC_AdrianLayme3.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="top-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand titulo-app m-0 text-black" asp-controller="Home" asp-action="Index">
                ARTESANIAS
            </a>
            <button id="toggleSidebar" class="btn btn-sm btn-toggle">☰ MENU</button>
        </div>
    </header>

    <div class="wrapper d-flex">
        <nav id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Producto" asp-action="Index">🧺 Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Cliente" asp-action="Index">👤 Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Pedido" asp-action="Index">📝 Pedidos</a>
                </li>
                <!--
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">🔒 Privacidad</a>
                </li>
                -->
            </ul>
        </nav>

        <div id="content" class="content flex-grow-1">
            <main role="main" class="py-3">
                @RenderBody()
            </main>

            <footer class="footer-app text-center">
                <div class="container">
                    By: Ignacio Adrian Layme Delgado · 2025 ·
                    <a class="link-contraste" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const boton = document.getElementById('toggleSidebar');
        if (boton) {
            boton.onclick = () => document.body.classList.toggle('sidebar-cerrado');
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
